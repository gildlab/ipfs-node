server {
        listen 80 default_server;

        server_name localhost;
        client_max_body_size 10M;

        location / {
            add_header Access-Control-Allow-Origin *;
            proxy_pass http://127.0.0.1:5001;
        }

        location /ipfs {
            proxy_pass http://127.0.0.1:8080;
        }
}
